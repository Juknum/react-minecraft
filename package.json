{
  "name": "react-minecraft",
  "version": "1.2.0",
  "description": "React hooks and components for Minecraft resource pack development",
  "keywords": [
    "minecraft",
    "resource pack",
    "react",
    "hooks",
    "components"
  ],
  "main": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "homepage": "https://github.com/Juknum/react-minecraft",
  "bugs": {
    "url": "https://github.com/Juknum/react-minecraft/issues"
  },
  "author": {
    "name": "Juknum"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Juknum/react-minecraft.git"
  },
  "license": "MIT",
  "files": [
    "dist"
  ],
  "type": "module",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "ci": "npm run build && npm run check-exports && eslint . && npm run test",
    "lint": "eslint . --fix",
    "test": "vitest run --coverage",
    "check-exports": "attw --pack .",
    "local-release": "npm run ci && changeset version && changeset publish"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@react-three/drei": "^9.111.5",
    "@react-three/fiber": "^8.17.6",
    "three": "^0.168.0"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.15.4",
    "@eslint/js": "^9.9.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.0.0",
    "@types/eslint__js": "^8.42.3",
    "@types/react": "^18.3.4",
    "@types/three": "^0.168.0",
    "@typescript-eslint/parser": "^8.4.0",
    "@vitest/coverage-istanbul": "^2.0.5",
    "eslint": "^8.57.0",
    "eslint-plugin-unused-imports": "^4.1.3",
    "jsdom": "^24.1.1",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.4.0",
    "vitest": "^2.0.5"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17 || ^18 || ^19"
  }
}
